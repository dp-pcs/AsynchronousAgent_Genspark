{
  "name": "agent-benchmark-monorepo",
  "private": true,
  "workspaces": [
    "apps/web",
    "libs/shared"
  ],
  "scripts": {
    "test": "npm -w apps/web test && npm -w libs/shared test",
    "test:python": "cd services/api && python -m pytest tests/ -v",
    "test:all": "npm test && npm run test:python",
    "build": "npm -w apps/web run build",
    "audit": "npm audit --audit-level=low",
    "audit:python": "cd services/api && pip-audit --requirement requirements.txt",
    "audit:all": "npm run audit && npm run audit:python"
  }
}